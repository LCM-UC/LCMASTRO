---
import Layout from "../layouts/Layout.astro";
import Particles from "../components/effects/Particles.astro";
import HeroHome from "../components/sections/HeroHome.astro";
import FeatureSection from "../components/sections/FeatureSection.astro";
import CTA from "../components/sections/CTA.astro";

const features = [
  {
    title: "Desarrollo Web",
    description: "Creación de sitios web modernos, responsivos y optimizados con HTML, CSS, JavaScript y frameworks como Tailwind y Astro. Cada proyecto es una experiencia única diseñada para impactar.",
    imageSrc: "/img/DesarrolloWeb.jpg",
    imageAlt: "Desarrollo Web",
    tags: ["HTML/CSS", "JavaScript", "Astro", "Tailwind", "React", "TypeScript"],
    linkText: "Ver proyectos web",
    linkHref: "/proyectos",
    reverse: false,
    glitchText: "WEB",
    gradientClass: "web" as const
  },
  {
    title: "Programación",
    description: "Dominio de lenguajes como Python, C++ y Java, aplicados en proyectos de software, algoritmos y automatización. Soluciones eficientes para problemas complejos.",
    imageSrc: "/img/Programacion.jpg",
    imageAlt: "Programación",
    tags: ["Python", "C++", "Java", "Git", "Algoritmos", "POO"],
    linkText: "Ver habilidades técnicas",
    linkHref: "/habilidades",
    reverse: true,
    glitchText: "CODE",
    gradientClass: "programming" as const
  },
  {
    title: "Inteligencia Artificial",
    description: "Aplicaciones de IA en áreas como reconocimiento de patrones, machine learning y análisis de datos. Transformando datos en decisiones inteligentes.",
    imageSrc: "/img/InteligenciaArtificial.jpg",
    imageAlt: "Inteligencia Artificial",
    tags: ["Machine Learning", "Data Science", "Análisis", "TensorFlow", "Pandas", "NumPy"],
    linkText: "Ver proyectos de IA",
    linkHref: "/proyectos",
    reverse: false,
    glitchText: "AI",
    gradientClass: "ai" as const
  }
];
---

<Layout 
  title="Inicio | Portafolio LCM"
  description="Leonardo Canorio - Estudiante de Ingeniería de Sistemas e Informática. Desarrollo web moderno con Astro, Tailwind y JavaScript."
>
  <Particles />

  <HeroHome 
    title="Ingeniería al servicio de la innovación digital"
    name="Leonardo Canorio"
    description="estudiante de Ing. de Sistemas e Informática. Creo experiencias web modernas, rápidas y funcionales con buenas prácticas y herramientas actuales."
    avatarSrc="/img/leo.jpg"
    avatarAlt="Leonardo Canorio - Estudiante de Ingeniería de Sistemas"
    primaryButtonText="Ver proyectos"
    primaryButtonHref="/proyectos"
    secondaryButtonText="Hablemos"
    secondaryButtonHref="/contacto"
  />

  {features.map((feature) => (
    <FeatureSection {...feature} />
  ))}

  <CTA 
    title="¿Listo para crear algo increíble?"
    description="Colaboremos en tu próximo proyecto. Estoy disponible para freelance, pasantías y proyectos académicos."
    buttonText="Iniciar conversación"
    buttonHref="/contacto"
    buttonIcon="message"
  />
</Layout>