---
interface Props {
  nombre: string;
  nivel: number; // 0-100
}

const { nombre, nivel } = Astro.props;
---

<div class="skill-item">
  <div class="skill-header">
    <span class="skill-name">{nombre}</span>
    <span class="skill-percentage">{nivel}%</span>
  </div>
  <div class="skill-bar-container">
    <div 
      class="skill-bar-fill" 
      data-nivel={nivel}
    ></div>
  </div>
</div>

<style>
  .skill-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skill-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .skill-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-texto);
  }

  .skill-percentage {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-principal);
    font-family: 'Courier New', monospace;
  }

  .skill-bar-container {
    width: 100%;
    height: 0.5rem;
    background-color: rgba(176, 224, 168, 0.1);
    border: 1px solid rgba(176, 224, 168, 0.2);
    overflow: hidden;
  }

  .skill-bar-fill {
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, var(--color-principal), var(--color-secundario));
    transition: width 1.5s cubic-bezier(0.23, 1, 0.32, 1);
    position: relative;
  }

  .skill-bar-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
</style>

<script>
  const skillBarsObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const bar = entry.target as HTMLElement;
        const nivel = bar.dataset.nivel;
        if (nivel) {
          bar.style.width = nivel + '%';
        }
      }
    });
  }, { threshold: 0.5 });

  document.querySelectorAll('.skill-bar-fill').forEach(bar => {
    skillBarsObserver.observe(bar);
  });
</script>